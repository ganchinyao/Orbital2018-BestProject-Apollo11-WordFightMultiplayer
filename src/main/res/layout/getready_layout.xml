<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#dc000000"
    android:orientation="vertical"
    android:gravity="center">

        <com.ganwl.multiplayerwordgame.helper.CustomTextView
            android:id="@+id/getready_topText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/getready"
            android:textColor="@color/white"
            android:textSize="@dimen/_36sdp"
           />

        <com.ganwl.multiplayerwordgame.helper.CustomTextView
            android:id="@+id/getready_bottomText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="All categories: Easy"
            android:textColor="#b2ececec"
            android:textSize="@dimen/_26sdp"
           />

</LinearLayout>