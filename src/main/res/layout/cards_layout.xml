<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_110sdp"
    android:layout_margin="@dimen/_2sdp"
    android:background="@drawable/categoryunchecked">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <!--<ImageView-->
            <!--android:id="@+id/cardview_favoriteImage"-->
            <!--android:layout_width="@dimen/_16sdp"-->
            <!--android:layout_height="@dimen/_16sdp"-->
            <!--android:layout_gravity="right"-->
            <!--android:layout_marginRight="@dimen/_7sdp"-->
            <!--android:layout_marginTop="@dimen/_10sdp"-->
            <!--android:src="@drawable/favorite_selector" />-->

        <!-- blank view to have spacing on top-->
        <View
            android:id="@+id/cardview_notLockTopPadding"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_26sdp" />

        <View
            android:id="@+id/cardview_lockTopPadding"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/cardview_lockIcon"
            android:layout_width="@dimen/_21sdp"
            android:layout_height="@dimen/_21sdp"
            android:src="@drawable/popup_lock"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_15sdp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/cardview_categoryImage"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/flameicon" />

        <com.ganwl.multiplayerwordgame.helper.CustomTextView
            android:id="@+id/cardview_categoryName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:gravity="center|top"
            android:maxLines="1"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:text="Android Name"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            app:autoSizeMaxTextSize="@dimen/_14sdp"
            app:autoSizeMinTextSize="@dimen/_8sdp"
            app:autoSizeTextType="uniform" />
    </LinearLayout>

</RelativeLayout>
